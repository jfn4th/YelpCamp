<% include partials/header %>

<div class="row">
    <div class="userForm">
        <form class="form-signin" action="/login" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="inputUsername" name="username" class="form-control beginning" placeholder="Username"
                required autofocus>
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="password" class="form-control end" placeholder="Password"
                required>
            <a href="/forgot">Forgot Password</a>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
        <div class="form-signin" id="">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>