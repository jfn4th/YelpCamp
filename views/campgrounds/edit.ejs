<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= campground.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="campground[name]">Name</label>
                <input class='form-control' type="text" name="campground[name]" placeholder="Name"
                    value="<%= campground.name %>" id="">
            </div>
            <div class="form-group">
                <label for="campground[price]">Price</label>
                <input class='form-control' type="number" name="campground[price]" value="<%= campground.price %>"
                    placeholder="Price" min="0.01" step="0.01" id="">
            </div>
            <div class="form-group">
                <label for="campground[image]">Image URL</label>
                <input class='form-control' type="text" name="campground[image]" placeholder="Image URL"
                    value="<%= campground.image %>" id="">
            </div>
            <div class="form-group">
                <label for="campground[description]">Description</label>
                <input class='form-control' type="text" name="campground[description]" placeholder="Description"
                    value="<%= campground.description %>" id="">
            </div>
            <div class="form-group">
                <label for="campground[location]">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location"
                    value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>